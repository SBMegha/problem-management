<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/schemes.css">
  <link rel="stylesheet" href="/css/addscheme.css">
  <title>Department</title>
</head>
<body>
  <div class="schemes">
  {{> nav}}
 {{!-- table --}}
    {{#if admin}}
    <a href="/admin/adddepartment" class="add-scheme-link"><button class="add-scheme">Add Department</button></a>
    {{/if}}
    <table>
      <tr>
        <th>Department code</th>
        <th>Name</th>
        <th>Address</th>
        <th>Contact</th>
        {{#if admin}}
        <th>Delete</th>
        {{/if}}
      </tr>
      {{#each departments}}
      <tr>
        <td>{{this.deptCode}}</td>
        <td>{{this.name}}</td>
        <td style="text-align: left;">
          <p>Street: {{this.address.street}}</p>
          <p>Taluk: {{this.address.taluk}} </p>
          <p>City: {{this.address.city}}</p>
          <p>Pincode: {{this.address.pincode}}</p>
        </td>
        <td><a href="tel:{{this.phoneNumber}}">{{this.phoneNumber}}</a></td>
        {{#if this.isAdmin}}
        <td><a href="/admin/deletedepartment/{{this._id}}" class="delete-link"><button class="delete-scheme"> 🗑️ Delete </button></a></td>
        {{/if}}
      </tr>
      {{/each}}
    </table>
  </div>
</body>
</html>

